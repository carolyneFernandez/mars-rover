{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<style>
    /*.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <table>
        {% for y, lineX in map %}

            <tr>
                {% for x, value in lineX %}
                    {% set case = x~','~y %}
                    <td class=" {% if case in ice %} blue {% endif %} {% if case in road|keys %} black {% endif %}">
                        ({{ case }})<br>Z = {{ value[0] }}<br>M = {{ value[1] }} </td>
                {% endfor %}
            </tr>
        {% endfor %}

    </table>

{% endblock %}
